modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000

[[ports]]
localPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "jq", "libuuid", "lsof", "pkg-config", "qhull", "tcl", "tk"]

[userenv]

[userenv.development]
USE_WS_OVERRIDE = "true"
DISABLE_SIGNAL_ENGINE = "false"

[userenv.production]
PORT = "5000"
NODE_ENV = "production"

[deployment]
run = ["npm", "start"]
deploymentTarget = "vm"
build = ["npm", "run", "build"]
